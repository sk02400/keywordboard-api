<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- ヘッダー -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="#FFFFFF"
        android:gravity="end|center_vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:elevation="4dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- ブックマーク -->
        <ImageButton
            android:id="@+id/buttonBookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_bookmark"
            android:contentDescription="ブックマーク"
            android:tint="#212121" />

        <!-- メッセージ -->
        <ImageButton
            android:id="@+id/buttonMessage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_message"
            android:contentDescription="メッセージ"
            android:tint="#212121"
            android:layout_marginStart="12dp" />

        <!-- 通知 -->
        <ImageButton
            android:id="@+id/buttonNotification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_notifications"
            android:contentDescription="通知"
            android:tint="#212121"
            android:visibility="gone"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- 名前入力 -->
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="名前"
        android:text="ゲスト"
        android:textColor="#212121"
        android:textColorHint="#888888"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:maxLength="100"
        android:layout_marginTop="24dp" />

    <!-- 掲示板名入力 -->
    <EditText
        android:id="@+id/editTextBoardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="キーワード（URL等）を入力してください"
        android:textColor="#212121"
        android:textColorHint="#888888"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:drawableEnd="@drawable/ic_clear"
        android:maxLength="1000"
        android:drawablePadding="8dp" />

    <!-- GOボタン -->
    <Button
        android:id="@+id/buttonGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:stateListAnimator="@null"
        android:theme="@style/ButtonNoCorner"
        android:layout_marginTop="16dp" />

    <!-- ログインボタン -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ログイン"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:stateListAnimator="@null"
        android:theme="@style/ButtonNoCorner"
        android:layout_marginTop="16dp" />

</LinearLayout>
